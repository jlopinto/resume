{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "eol-last": 1,
    "max-len": [
      2,
      120,
      {
        "ignoreComments": true,
        "ignoreUrls": true
      }
    ],
    "no-console": [
      2,
      {
        "allow": ["info", "warn", "error"]
      }
    ],
    "comma-dangle": [2, "never"],
    "arrow-parens": [
      2,
      "as-needed",
      {
        "requireForBlockBody": false
      }
    ],
    "consistent-return": [0],
    "no-underscore-dangle": [0],
    "global-require": [0],
    "import/no-unresolved": [2, { "caseSensitive": false }]
  }
}
